<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <% if current_user %>
    <div class="greeting">
      <span>Hello, <%= current_user[:first_name] %>!</span><%= link_to ' Logout', '/logout' %>
    </div>
  <% else %>
    <div class="greeting">
      <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
    </div>
  <% end %>

  <main class="container">
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
