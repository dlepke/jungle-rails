<!DOCTYPE html>
<html>
    <head>
        <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
    </head>


    <body>
        <h1>Thank you for your order!</h1>
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                </tr>
            </thead>
            <tbody>
                <% @order_total = 0 %>
                <% @order.line_items.each do |line_item| %>
                    <%= render 'item', product_id: line_item.product_id, quantity: line_item.quantity %>
                <% end %>
            </tbody>
            <tfoot>
                <tr> 
                    <th>TOTAL: </th>
                    <th>
                        <%= @order_total %>
                    </th>
                </tr>
            </tfoot>
        </table>
    </body>
</html>